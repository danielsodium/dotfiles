version: 2
final_space: true
console_title_template: '{{ .Shell }} in {{ .Folder }}'

blocks:
  - type: prompt
    alignment: left
    segments:
      - type: path
        style: plain
        foreground: blue
        properties:
          style: folder
          folder_separator_icon: '/'
          home_icon: '~'
      - type: text
        style: plain
        foreground: green
        template: ' $ '

  - type: rprompt
    alignment: right
    segments:
      - type: time
        style: plain
        foreground: yellow
        properties:
          time_format: '15:04:05'

transient_prompt:
  foreground: green
  template: '$ '

transient_rprompt:
  foreground: yellow
  template: '{{ .FormattedDate }}'
